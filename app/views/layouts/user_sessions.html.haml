!!!
%html
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"} 
    %title Servicios de Salud Publica
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/application.css', :media => 'screen'
    = stylesheet_link_tag 'fullcalendar.css', :media => 'screen'
    = stylesheet_link_tag 'dialog.css', :media => 'screen'
    = stylesheet_link_tag 'jquery-ui.css', :media => 'screen'
    = javascript_include_tag :defaults
    = javascript_include_tag "fullcalendar.js", "fullcalendar.min.js", "gcal.js"
  %body
    .principal
      #header

      #content
        .indicator{:style => 'display:none'}
          Cargando...
        %p{:style => "color: green"}
          = notice
        #workspace
          = yield
      #footer
