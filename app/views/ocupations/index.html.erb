<h1>Listing ocupations</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @ocupations.each do |ocupation| %>
  <tr>
    <td><%=h ocupation.name %></td>
    <td><%= link_to 'Show', ocupation %></td>
    <td><%= link_to 'Edit', edit_ocupation_path(ocupation) %></td>
    <td><%= link_to 'Destroy', ocupation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New ocupation', new_ocupation_path %>